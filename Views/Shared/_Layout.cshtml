<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Hello World</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="~/css/templatemo_style.css" rel="stylesheet" />
    @RenderSection(name: "header", required: false)
    @RenderSection(name: "smoothMenu", required: false)
    @RenderSection(name: "slider", required: false)
    <link href="~/css/ddsmoothmenu.css" rel="stylesheet" />
    <script src="~/js/ddsmoothmenu.js"></script>

    <script type="text/javascript">

        ddsmoothmenu.init({
            mainmenuid: "templatemo_menu", //menu DIV id
            orientation: 'h', //Horizontal or vertical menu: Set to "h" or "v"
            classname: 'ddsmoothmenu', //class added to menu's outer DIV
            //customtheme: ["#1c5a80", "#18374a"],
            contentsource: "markup" //"markup" or ["container_id", "path_to_menu_file"]
        })

    </script>

</head>

<body onload="changeID()" id="home">
    <script>
        function changeID() {
            if (@ViewBag.Title != "Home")
                document.getElementById('home').id = "subpage";
        }
    </script>


    <div id="templatemo_wrapper">
        <div id="templatemo_header">
            <div id="site_title">
                <h1><a href=@Url.Action("Index", "Home")>Free Website Template</a></h1>
            </div>

            <div id="header_right">
                <ul id="language">
                    <li><a><img src="~/images/usa.png" alt="English" /></a></li>
                    <li><a><img src="~/images/china.png" alt="Chinese" /></a></li>
                    <li><a><img src="~/images/germany.png" alt="Germany" /></a></li>
                    <li><a><img src="~/images/india.png" alt="Indian" /></a></li>
                </ul>
                <div class="cleaner"></div>
                <div id="templatemo_search">
                    <form action="#" method="get">
                        <input type="text" value="Search" name="keyword" id="keyword" title="keyword" onfocus="clearText(this)" onblur="clearText(this)" class="txt_field" />
                        <input type="submit" name="Search" value="" alt="Search" id="searchbutton" title="Search" class="sub_btn" />
                    </form>
                </div>
                @if (Session["User"] != null)
                {

                    <div style="text-align:right">
                        Hello 
                        <a>@Session["User"]</a> 
                        |
                        <a href=@Url.Action("Logout", "User")>Đăng xuất</a>
                                           
                    </div>
                }
                else
                {
                    <div style="text-align:right">
                        @if (ViewBag.Title != "Login")
                        {
                            <a href=@Url.Action("Login", "User")>Đăng nhập</a>
                            <h8> | </h8>
                        }
                        <a href=@Url.Action("Register", "User")>Đăng ký</a>

                    </div>
                }
            </div> <!-- END -->

        </div> <!-- END of header -->
        @RenderSection(name: "menuBar", required: false)

        <!-- end of templatemo_menu -->

        @RenderSection(name: "Tem_Middle", required: false)

        @RenderSection(name: "space", required: false)
        <div id="templatemo_main_top"></div>
        <div id="templatemo_main">
            @RenderSection(name: "_Slider", required: false)

            @RenderBody()
            <!-- END of middle -->

            @{
                Html.RenderAction("_SideBar", "Home");

            }

            <!-- END of sidebar -->
            <!-- END of content -->
            <div class="cleaner"></div>
        </div> <!-- END of main -->

        <div id="templatemo_footer" style="width: 940px;">
            <div class="col col_16">
                <h4>Categories</h4>
                <ul class="footer_menu">
                    <li><a href="#">Aenean et dolor diam</a></li>
